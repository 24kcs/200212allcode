$fontColor = #02a774
// 引入重置的样式
@import './reset.css'
// 引入混合样式文件
@import './mixins.styl'
html,body
  width 100%
  overflow hidden
  .app
    width 100%
    height 100%
    .footer
      width 100%
      height 50px
      position fixed
      left 0
      bottom 0
      display flex
      .footerItem
        display flex
        flex 1
        flex-direction column
        justify-content center
        align-items center
        &.active
          color $fontColor
        .iconfont
          font-size 20px
        span
          margin-top 3px
